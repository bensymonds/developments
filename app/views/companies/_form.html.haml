= form_for @company do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= pluralize(@company.errors.count, "error") +  " prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
    %br/
    = f.label :project_team_roles
    - Development::PROJECT_TEAM_ROLES.each do |ptr|
      %br/
      = check_box_tag "company[project_team_roles][]", ptr, @company.project_team_roles.include?(ptr)
      = ptr
  .actions
    = f.submit
